                </ItemsControl.ItemsPanel>

                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <shotView:TargetControl 
                            Margin="10"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
