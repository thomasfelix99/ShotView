            </ItemsControl>

        </ScrollViewer>-->

        <shotView:TargetControl
            HorizontalAlignment="Left"
            Width="766"
            Height="484"
            DataContext="{Binding Target1 }" />

        <Label 
            Width="700"
            FontSize="90"
            FontWeight="Bold"
            HorizontalAlignment="Left"
            HorizontalContentAlignment="Center"
            Content="{Binding Target1Score}" 
            ContentStringFormat="F1"
            />

    </StackPanel>
</Window>
